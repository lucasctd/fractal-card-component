<div class="card">
    <div class="card__background"></div>
    <div class="card__header-box">
        <h4 class="card__sub-title">{{sub-title}}</h4>
        <h2 class="card__title">{{title}}</h2>
    </div>
	<div class="card__text">
        <p>{{text}}</p>
    </div>	
    <div class="card__button">
        {{ render '@button' }}
    </div>
</div>